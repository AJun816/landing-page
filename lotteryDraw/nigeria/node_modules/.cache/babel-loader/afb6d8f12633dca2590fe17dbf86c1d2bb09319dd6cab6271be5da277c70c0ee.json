me = new Date().getTime();\n  timer = setInterval(updateCountdown, 1000);\n});\n\nonUnmounted(() => {\n  clearInterval(timer);\n});\n</script>\n\n<style scoped>\n.flip-card {\n  @apply flex flex-col items-center;\n}\n.number {\n  @apply text-5xl md:text-7xl font-extrabold bg-white text-black px-4 py-2 rounded;\n  display: inline-block;\n  min-width: 70px;\n  text-align: center;\n  box-shadow: 0 4px 8px rgba(0,0,0,0.3);\n}\n.unit {\n  @apply text-sm mt-2 tracking-widest opacity-80 uppercase;\n}\n.separator {\n  @apply text-5xl md:text-7xl font-bold text-white;\n}\n</style>\n"],"mappings":"AAmCA,SAASA,GAAG,EAAEC,SAAS,EAAEC,WAAW,QAAQ,KAAK;;AAEjD;;;;;;;;;;;;;;;;;;;;;;IACA,MAAMC,KAAK,GAAGC,OAIZ;IAEF,MAAMC,KAAK,GAAGL,GAAG,CAAC,CAAC,CAAC;IACpB,MAAMM,OAAO,GAAGN,GAAG,CAAC,CAAC,CAAC;IACtB,MAAMO,OAAO,GAAGP,GAAG,CAAC,CAAC,CAAC;IAEtB,IAAIQ,SAAS,EAAEC,KAAK;IAEpB,MAAMC,eAAe,GAAGA,CAAA,KAAM;MAC5B,MAAMC,GAAG,GAAG,IAAIC,IAAI,CAAC,CAAC,CAACC,OAAO,CAAC,CAAC;MAChC,MAAMC,OAAO,GAAGH,GAAG,GAAGH,SAAS;MAC/B,MAAMO,SAAS,GAAGC,IAAI,CAACC,GAAG,CAACd,KAAK,CAACe,aAAa,GAAGJ,OAAO,EAAE,CAAC,CAAC;MAE5DT,KAAK,CAACc,KAAK,GAAGH,IAAI,CAACI,KAAK,CAAEL,SAAS,IAAI,IAAI,GAAG,EAAE,GAAG,EAAE,CAAC,GAAI,EAAE,CAAC;MAC7DT,OAAO,CAACa,KAAK,GAAGH,IAAI,CAACI,KAAK,CAAEL,SAAS,GAAG,IAAI,GAAG,EAAE,GAAI,EAAE,CAAC;MACxDR,OAAO,CAACY,KAAK,GAAGH,IAAI,CAACI,KAAK,CAAEL,SAAS,GAAG,IAAI,GAAI,EAAE,CAAC;MAEnD,IAAIA,SAAS,IAAI,CAAC,EAAEM,aAAa,CAACZ,KAAK,CAAC;IAC1C,CAAC;IAEDR,SAAS,CAAC,MAAM;MACdO,SAAS,GAAG,IAAII,IAAI,CAAC,CAAC,CAACC,OAAO,CAAC,CAAC;MAChCJ,KAAK,GAAGa,WAAW,CAACZ,eAAe,EAAE,IAAI,CAAC;IAC5C,CAAC,CAAC;IAEFR,WAAW,CAAC,MAAM;MAChBmB,aAAa,CAACZ,KAAK,CAAC;IACtB,CAAC,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}